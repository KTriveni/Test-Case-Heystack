<div class="sign_in_body">
  <p class="sign_in_title"><%= devise_error_messages! %></p>
  <div class="sign_in_wrapper">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login"}) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
        <%= render "devise/shared/links" %>
        <button>
          <i class="spinner"></i>
          <span class="state">Send me reset password instructions</span>
        </button>
      </p>
    <% end -%>
  </div>
</div>
